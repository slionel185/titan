// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  MEMBER
  EMPLOYEE
}

model Prospect {
  id String @id @default(uuid())

  name  String
  email String @unique
  phone String

  message String?
}

model User {
  id String @id @default(uuid())

  email    String @unique
  image    String?
  username String @unique
  password String

  type UserType @default(MEMBER)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model WorkoutPlan {
  id String @id @default(uuid())

  name String
}

model Exercise {
  id String @id @default(uuid())

  name String
}
